@model IEnumerable<Proyecto_Final.Models.Auto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Nuevo registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Modelo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <div class="card" style="width: 18rem;">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@Html.DisplayFor(modelItem => item.Modelo)</li>
                <li class="list-group-item">@Html.DisplayFor(modelItem => item.Color)</li>
                <li class="list-group-item">@Html.DisplayFor(modelItem => item.Precio)</li>
                    <li class="list-group-item">@Html.DisplayFor(modelItem => item.Cantidad)</li>
            </ul>
        </div>
        }
    </tbody>
</table>
